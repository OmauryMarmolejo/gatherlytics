<h1><%= @event.title %></h1>
<p>Description: <%= @event.description %></p>
<p>Date: <%= @event.date.strftime('%B %d, %Y') %></p>
<p>Location: <%= @event.location %></p>

<h2>Invite User</h2>

<%= form_with url: invitations_path do |form| %>
  <%= form.hidden_field :event_id, value: @event.id %>
  <div>
    <%= form.label :user_id, "Select User" %><br>
    <%= form.collection_select :user_id, User.all, :id, :name, prompt: "Choose a user" %>
  </div>
  <div>
    <%= form.label :status %><br>
    <%= form.text_field :status %>
  </div>
  <%= form.submit "Send Invitation" %>
<% end %>